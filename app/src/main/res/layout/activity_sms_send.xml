<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="example.mohon.com.helpme.SmsSend"
    android:orientation="horizontal">



         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Your Current Place"
            android:id="@+id/d" />

    <Button
        android:layout_width="156dp"
        android:layout_height="69dp"
        android:id="@+id/btnShowLocation"
        android:text="Show Location"
        android:background="#f4baba"
        android:textSize="20dp"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/textViewLocation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1.12" />

    <Button
        android:layout_width="173dp"
        android:layout_height="69dp"
        android:text="Send My Location"
        android:id="@+id/buttonHelp"
        android:onClick="sendMessage"


        android:background="#fe1010"
        android:textSize="20dp"
        android:layout_alignTop="@+id/btnShowLocation"
        android:layout_toRightOf="@+id/btnShowLocation"
        android:layout_toEndOf="@+id/btnShowLocation" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textViewLocation"
            android:layout_below="@+id/d"
            android:background="#a8adf6" />


    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

    </ScrollView>

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/listMessages"
        android:background="#a2c18e"
        android:divider="@android:color/white"
        android:dividerHeight="10.0sp"
        android:layout_x="15px"
        android:layout_y="40px"
        android:clickable="false"
        android:layout_height="237dp"
        android:layout_weight="0.32"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button2"
        android:layout_below="@+id/btnShowLocation" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;&lt; back"
        android:id="@+id/button2"
        android:onClick="mainPage"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>

